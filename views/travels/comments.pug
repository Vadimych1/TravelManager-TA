html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Просмотр комментариев о #{travelname} - #{appname}
        link(rel="stylesheet", href="/css/global.css")
    body
        button(onclick="(function(){navigation.back()})()") Назад

        h1 #{travel.name}
        h3 Город: #{travel.town.name}

        hr

        ul.comments
            if comments && comments.length > 0
                for comment in comments
                    li.comment
                        p #{comment.username}: #{comment.text}
                        p Понравилось: #{comment.pros}
                        if comment.stars == 1
                            p 1 звезда
                        else if comment.stars == 5
                            p 5 звёзд
                        else
                            p #{comment.stars} звёзд
            else 
                p Комментариев и отзывов пока нет